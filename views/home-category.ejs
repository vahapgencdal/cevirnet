<div>
    <h3 class="SubMenuTitle">Kategori ekleme-silme-güncelleme ve kategori birim ekleme-birim silme-birim
        güncelleme paneli</h3>

    <button type="button" class="btn btn-primary" data-toggle="modal" id="newCategoryButton">Yeni
        Kategori
    </button>
    <br/><br>
    <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
        <thead>
        <tr>
            <th class="tableHeaderCell">Kategory Adı</th>
            <th class="tableHeaderCell">Açıklama</th>
            <th class="tableHeaderCell">İcon</th>
            <th class="tableHeaderCell">Kayıt Tarihi</th>
            <th class="tableHeaderCell">Güncelle</th>

        </tr>
        </thead>
        <tfoot>
        <tr>
            <th class="tableHeaderCell">Kategory Adı</th>
            <th class="tableHeaderCell">Açıklama</th>
            <th class="tableHeaderCell">İcon</th>
            <th class="tableHeaderCell">Kayıt Tarihi</th>
            <th class="tableHeaderCell">Güncelle</th>
        </tr>
        </tfoot>
        <tbody>
        <% for(let index = 0;index < categoryList.length; index++) { %>

        <tr>
            <td><%= categoryList[index].name %></td>
            <td><%= categoryList[index].desc %></td>
            <td><%= categoryList[index].icon %></td>
            <td><%= categoryList[index].cDate %></td>
            <td>
                <%
                    var category=JSON.stringify(categoryList[index]);

                %>
                <a href="#"  onclick="openCategoryModal(<%=category%>)" class="btn btn-primary">Güncelle</a>
            </td>
        </tr>
        <% } %>

        </tbody>
    </table>
    <div id="newCategoryModal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Yeni Kategori Oluştur</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div id="exTab3">
                            <ul class="nav nav-divider">
                                <li class="active">
                                    <a class="col-md-6 col-xs-6" href="#1b" data-toggle="tab">Kategori</a>
                                </li>
                                <li><a class="col-md-6 col-xs-6" href="#2b" data-toggle="tab">Birim</a>
                                </li>
                            </ul>
                            <div class="tab-content clearfix">
                                <div class="tab-pane active" id="1b">
                                    <div class="row">
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtTitleCat">Başlık</label>
                                                <input type="text" class="form-control" id="txtTitleCat" required/>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtTitleCatDesc">Açıklama</label>
                                                <textarea class="form-control" id="txtTitleCatDesc" required rows="2"></textarea>
                                            </div>
                                            <div class="form-group">
                                                <label for="fileIconCategory">İcon Seç</label>
                                                <input type="file" class="form-control-file" id="fileIconCategory"
                                                       aria-describedby="fileHelp">
                                                <small id="fileHelp" class="form-text text-muted"></small>
                                            </div>
                                        </div>
                                        <div class="col-md-6">
                                            <div class="form-group">
                                                <label for="txtTitleCat">Alt Kategori Adı</label>
                                                <input type="text" class="form-control" id="subCategoryName"/>
                                            </div>
                                            <div class="form-group">
                                                <label for="txtTitleCat">Alt Kategori Açıklama</label>
                                                <input type="text" class="form-control" id="subCategoryDesc"/>
                                            </div>
                                            <button id="subCategoryAdd" class="btn btn-primary pull-right" type="button">
                                                <span class="glyphicon glyphicon-plus bold"></span> Ekle
                                            </button>
                                            <br>
                                            <div class="form-group">
                                                <label for="subCategoriesTag" class="control-label">Alt Kategoriler</label>
                                                <div id="subCategoriesTag" class="bootstrap-tagsinput">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="tab-pane" id="2b">
                                    <div class="row">
                                        <div class="col-md-6 col-xs-6">
                                            <div class="form-group">
                                                <label for="subCategoriesDrop">Alt Kategoriler</label>
                                                <select  id="subCategoriesDrop" class="form-control">
                                                    <option value="-1">Seçiniz</option>
                                                </select>
                                            </div>

                                        </div>
                                        <div class="col-md-6 col-xs-6">
                                            <span style="font-size: medium;">Seçili Alt Kategori :<br> <span id="selectedSubCategory" class="label label-success"></span></span>
                                        </div>
                                    </div>
                                    <br>
                                    <div style="border-top: 1px solid aquamarine;" class="row">
                                        <div  id="subCategories" class="col-md-4 col-xs-4" >
                                            <span style="font-size: medium;font-weight: bold">Birim İşlemleri</span>
                                            <div class="form-group">
                                                <label for="txtTitleCatDesc">Birim İsmi</label>
                                                <input type="text" class="form-control" id="txtunitName" />
                                            </div>
                                            <div class="form-group">
                                                <label for="txtTitleCatDesc">Birim Kodu</label>
                                                <input type="text" class="form-control" id="txtunitCode" />
                                            </div>
                                            <div class="form-group">
                                                <label for="txtTitleCatDesc">Birim Değeri</label>
                                                <input type="number" class="form-control" id="txtunitVal" />
                                            </div><br>
                                            <button type="button" id="txtunitAdd" class="btn btn-primary">Ekle</button>
                                        </div>
                                        <div class="col-md-8 col-xs-8">
                                            <div class="form-group">
                                                <label for="unitTags" class="control-label">Seçili Birimler</label>
                                                <div id="unitTags" class="bootstrap-tagsinput">

                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" id="saveCategory" onclick="saveCategory()" class="btn btn-primary">KAYDET</button>
                </div>
            </div>

        </div>
    </div>
</div>
